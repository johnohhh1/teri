            <span id="dbStatus">Ready<span class="status-indicator status-ready"></span></span>
        </div>
        <div class="status-item">
            <span>ü§ñ TERI Model</span>
            <span id="modelStatus">Ready<span class="status-indicator status-ready"></span></span>
        </div>
        <div class="status-item">
            <span>üîß Backend API</span>
            <span id="apiStatus">Ready<span class="status-indicator status-ready"></span></span>
        </div>
        <div class="status-item">
            <span>üì± Mobile App</span>
            <span id="mobileStatus">Ready<span class="status-indicator status-ready"></span></span>
        </div>
    </div>

    <div class="features">
        <div class="feature-tile">
            <div class="feature-icon">üìö</div>
            <div class="feature-name">Training</div>
        </div>
        <div class="feature-tile">
            <div class="feature-icon">üí¨</div>
            <div class="feature-name">Translator</div>
        </div>
        <div class="feature-tile">
            <div class="feature-icon">üé§</div>
            <div class="feature-name">Mediator</div>
        </div>
        <div class="feature-tile">
            <div class="feature-icon">üéÆ</div>
            <div class="feature-name">Games</div>
        </div>
        <div class="feature-tile">
            <div class="feature-icon">üìà</div>
            <div class="feature-name">Progress</div>
        </div>
        <div class="feature-tile">
            <div class="feature-icon">üìù</div>
            <div class="feature-name">Journal</div>
        </div>
        <div class="feature-tile">
            <div class="feature-icon">üèõÔ∏è</div>
            <div class="feature-name">Pillars</div>
        </div>
        <div class="feature-tile">
            <div class="feature-icon">‚öôÔ∏è</div>
            <div class="feature-name">Settings</div>
        </div>
    </div>
</div>

<div class="footer">
    <div>Powered by TERI Model ‚Ä¢ ChromaDB ‚Ä¢ PostgreSQL ‚Ä¢ React Native</div>
</div>

<div class="loading-overlay" id="loadingOverlay">
    <div class="loading-content">
        <div class="spinner"></div>
        <div id="loadingText">Starting TERI App...</div>
    </div>
</div>

<script language="VBScript">
Dim shell, fso
Set shell = CreateObject("WScript.Shell")
Set fso = CreateObject("Scripting.FileSystemObject")

Function GetBasePath()
    GetBasePath = Replace(location.pathname, "TERI_APP_LAUNCHER.hta", "")
    GetBasePath = Replace(GetBasePath, "/", "\")
    GetBasePath = Mid(GetBasePath, 2)
End Function

Sub StartApp()
    document.getElementById("loadingOverlay").style.display = "flex"
    document.getElementById("loadingText").innerHTML = "Starting TERI App..."

    basePath = GetBasePath()

    ' Update status indicators
    UpdateStatus "dbStatus", "Starting...", "status-loading"
    UpdateStatus "modelStatus", "Starting...", "status-loading"
    UpdateStatus "apiStatus", "Starting...", "status-loading"
    UpdateStatus "mobileStatus", "Starting...", "status-loading"

    ' Start services
    shell.Run basePath & "START_TERI_APP.bat", 0, False

    window.setTimeout "CheckServices()", 3000
End Sub

Sub StopApp()
    document.getElementById("loadingOverlay").style.display = "flex"
    document.getElementById("loadingText").innerHTML = "Stopping TERI App..."

    shell.Run "taskkill /f /im node.exe", 0, True
    shell.Run "taskkill /f /im ollama.exe", 0, True
    shell.Run "docker-compose down", 0, True

    UpdateStatus "dbStatus", "Stopped", "status-stopped"
    UpdateStatus "modelStatus", "Stopped", "status-stopped"
    UpdateStatus "apiStatus", "Stopped", "status-stopped"
    UpdateStatus "mobileStatus", "Stopped", "status-stopped"

    window.setTimeout "HideLoading()", 2000
End Sub

Sub UpdateStatus(elementId, text, statusClass)
    document.getElementById(elementId).innerHTML = text & "<span class='status-indicator " & statusClass & "'></span>"
End Sub

Sub CheckServices()
    UpdateStatus "dbStatus", "Running", "status-ready"
    window.setTimeout "UpdateModelStatus()", 1000
End Sub

Sub UpdateModelStatus()
    UpdateStatus "modelStatus", "Running", "status-ready"
    window.setTimeout "UpdateAPIStatus()", 1000
End Sub

Sub UpdateAPIStatus()
    UpdateStatus "apiStatus", "Running", "status-ready"
    window.setTimeout "UpdateMobileStatus()", 1000
End Sub

Sub UpdateMobileStatus()
    UpdateStatus "mobileStatus", "Running", "status-ready"
    HideLoading()

    ' Open mobile app
    shell.Run "http://localhost:5000/health", 1, False
End Sub

Sub HideLoading()
    document.getElementById("loadingOverlay").style.display = "none"
End Sub
</script>

</body>
</html>